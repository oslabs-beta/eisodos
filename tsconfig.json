{
	"compilerOptions": {
		/* language and environment */
		"target": "ES6",
		"jsx": "react",
		"experimentalDecorators": true, // needed for typegoose

		/* emit */
    "sourceMap": true,
		"removeComments": true,
		"emitDecoratorMetadata": true, // needed for typegoose

		/* modules */
		"module": "CommonJS",
		"moduleResolution": "node",

		/* interop constraints */
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		/* type checking */
		"strict": true,
	}
}